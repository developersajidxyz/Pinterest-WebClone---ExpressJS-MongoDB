<!-- views/error.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Error</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      color: #333;
      margin: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
    }

    .error-container {
      text-align: center;
    }

    h1 {
      font-size: 4rem;
      color: #d9534f;
    }

    p {
      font-size: 1.5rem;
    }
  </style>
</head>
<body>
  <div class="error-container">
    <h1><%= error.status %></h1>
    <p><%= error.message %></p>
  </div>
</body>
</html>
